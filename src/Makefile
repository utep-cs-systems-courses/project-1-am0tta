# compiler flags. -g for debug, -03 for optimization
CFLAGS=-g -03

# first target is built by default
all: exec

# include file dependencies
history.o: history.h
tokenize.o: tokenize.h

# $@=target, $^=prerequisites
exec: history.o tokenize.o
	cc -o $@ $^ $(CFLAGS)

# deletes files generated by compilation
clean:
	rm -f *.o exec


